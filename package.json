{
  "name": "tokiponailo",
  "version": "0.1.4",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "elm-live src/Main.elm --dir=./public -- --output=public/main.js",
    "dist": "elm make src/Main.elm --output=dist/main.js && cp -r ./public/* ./dist && zip ./dist/dist.zip ./dist/*",
    "release": "release-it --minor --ci",
    "cd": "npm run dist && git status && npm run release"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "elm-live": "^4.0.2",
    "release-it": "^14.2.2"
  },
  "release-it": {
    "npm": {
      "publish": false
    },
    "github": {
      "release": true,
      "assets": [
        "./dist/dist.zip"
      ]
    }
  }
}
